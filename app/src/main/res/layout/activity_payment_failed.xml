<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7FA"
    android:fitsSystemWindows="true">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="Back"
            app:tint="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Order Failed"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Failed Icon -->
    <ImageView
        android:id="@+id/imgFailed"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_failed_tick"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Failure Message -->
    <TextView
        android:id="@+id/tvOrderFailed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Could Not Be Placed"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#B00020"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/imgFailed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Order Details -->
    <LinearLayout
        android:id="@+id/llOrderDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_margin="20dp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvOrderFailed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvIssueReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Possible Reason:\nâ— Invalid email address.\nPlease correct your details and try again."
            android:textSize="16sp"
            android:textColor="#000000"/>
    </LinearLayout>

    <!-- Retry Button -->
    <Button
        android:id="@+id/btnRetryOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Retry Order"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/llOrderDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"/>

    <!-- Bottom Navigation -->

</androidx.constraintlayout.widget.ConstraintLayout>
